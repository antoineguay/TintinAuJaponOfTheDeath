<Window x:Class="SpaceBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" >
    <Grid  Name="grid1">
        <Canvas Name="canvas">
            <Canvas.Background>
                <ImageBrush ImageSource="/SpaceBattle;component/Images/fond_accueil.jpg" Stretch="Fill"/>
            </Canvas.Background>
            <StackPanel Canvas.Left="154" Canvas.Top="211" Height="100" Name="boutonsAccueil" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" FlowDirection="LeftToRight">
                <Button Content="Nouvelle Partie" Height="36" Name="nouvelle_partie" Width="126" Margin="0,10" BorderBrush="{x:Null}" />
                <Button Height="36" Name="button1" Width="126" Foreground="{x:Null}" BorderThickness="3" BorderBrush="{x:Null}" MouseEnter="Credits_Clicked" Click="montrerCredits">
                    <Button.Background>
                        <ImageBrush ImageSource="/SpaceBattle;component/Images/bouton.png" />
                    </Button.Background>
                </Button>
            </StackPanel>
        </Canvas>

    </Grid>
</Window>
